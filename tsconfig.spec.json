{
  "extends": "./tsconfig.json",
  "compilerOptions": {
	"outDir": "./out-tsc/spec",
	"types": [
		"jest",
		"jasmine"
	],
	  "esModuleInterop": true,
	  "emitDecoratorMetadata": true
  },
